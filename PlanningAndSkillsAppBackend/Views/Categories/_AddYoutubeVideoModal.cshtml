@* _AddYoutubeVideoModal.cshtml *@
@using Model.CategoryModels

<div id="videoModal" class="modal-overlay" aria-hidden="true">
	<div class="modal-window">
		<button type="button" class="modal-close" onclick="closeVideoModal()">
			<i class="fas fa-times"></i>
		</button>

		<form asp-action="Create" asp-controller="YoutubeVideo" method="post" class="modal-form">
			@* include the CategoryId so your controller knows which category *@
			<input type="hidden" name="CategoryId" value="@ViewBag.CategoryId" />

			<h2 class="modal-title">YouTube Video</h2>

			<div class="modal-field">
				<input type="text" name="Title" placeholder="Title" required />
			</div>

			<div class="modal-field">
				<input type="text" name="YouTubeVideoId" placeholder="Video ID" required />
			</div>

			@* <div class="modal-field"> *@
			@* 	<input type="url" name="ThumbnailUrl" placeholder="Thumbnail URL" required /> *@
			@* </div> *@

			<div class="modal-field modal-datefield">
				<input type="date" name="PublishedAt" placeholder="Published At" required />
			</div>
			<button type="submit" class="modal-add-button">Add</button>
		</form>
	</div>
</div>


<style>
	.no-scroll {
		overflow: hidden;
	}

	/* Overlay */
	.modal-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0,0,0,0.4);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		pointer-events: none;
		transition: opacity 0.2s;
	}

		.modal-overlay[aria-hidden="false"] {
			opacity: 1;
			pointer-events: auto;
		}

	/* Window */
	.modal-window {
		position: relative;
		background: #fff;
		border-radius: 12px;
		padding: 2rem 1.5rem 1.5rem;
		width: 90%;
		max-width: 400px;
		box-shadow: 0 4px 20px rgba(0,0,0,0.1);
	}

	/* Close button */
	.modal-close {
		position: absolute;
		top: 0.5rem;
		right: 0.5rem;
		background: transparent;
		border: none;
		font-size: 1.2rem;
		cursor: pointer;
		color: #666;
	}

	/* Form layout */
	.modal-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.modal-title {
		/* margin: 0 0 0.5rem; */
		font-size: 1.25rem;
		text-align: center;
	}

	/* Input fields (pill style) */
	.modal-field {
		position: relative;
	}

		.modal-field input {
			box-sizing: border-box;
			width: 100%;
			padding: 0.75rem 1rem;
			border: none;
			border-radius: 8px !important;
			background: #ffffff !important;
			font-size: .9rem !important;
			color: #333;
			box-shadow: 0 2px 12px rgba(0,0,0,0.1) !important;
		}

			.modal-field input:focus {
				outline: none;
				box-shadow: inset 0 1px 3px rgba(0,0,0,1.2);
			}

	/* Date picker icon */
	.modal-datefield input {
		padding-right: 2.5rem;
	}

	.date-icon {
		position: absolute;
		right: 1rem;
		top: 50%;
		transform: translateY(-50%);
		pointer-events: none;
		color: #888;
	}

	/* Bottom “Add” button in modal */
	.modal-add-button {
		margin-top: 0.5rem;
		width: 100%;
		padding: 0.75rem;
		background-color: #e60000; /* YouTube-red */
		border: none;
		border-radius: 8px;
		color: #fff;
		font-size: 1rem;
		font-weight: bold;
		cursor: pointer;
		transition: background 0.2s;
	}

		.modal-add-button:hover {
			background-color: #cc0000;
		}
</style>


